---
import Logo from "./logo.astro";
---

<footer>

    <address>
      <Logo />
      Øster Farimagsgade 26, 2100 København
    </address>

  <article>
    <h2>Åbningstider</h2>
    <ul>
      <li>Wednesday <span>11-20</span></li>
      <li>Thursday <span>11-20</span></li>
      <li>Friday <span>11-20</span></li>
      <li>saturday <span>11-20</span></li>
      <li>Sunday <span>11-20</span></li>
    </ul>
  </article>
</footer>

<style>
  footer {
    margin-top: 3rem;
    padding-block: 2rem;
    background-color: var(--dark_blue);
    display: grid;
    place-items: center;
    gap: 1rem;
  }
  address {
    color: var(--light_beige);
    font-family: "raleway", sans-serif;
    font-weight: 400;
    font-style: normal;
    font-size: 1rem;
    line-height: 150%;
    display: grid;
    place-items: center;
  }
  article {
    color: var(--light_beige);
    font-family: "raleway", sans-serif;
    font-weight: 400;
    font-style: normal;
    display: grid;
    gap: 0.5rem;
    place-items: center;
  }
  h2 {
    font-family: "aviano-sans", sans-serif;
    font-weight: 500;
    font-style: normal;
  }
  li{
    list-style: none;
    display: flex;
    gap:1rem
  }
  li>span{
    margin-left:auto ;
  }
  @media (min-width: 1100px) {
    footer {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
