<article>
  <h2>Leave a review</h2>
  <form action="">
    <label for="name">Name</label>
    <input type="text" name="name" required />

    <label for="headline">Headline</label>
    <input type="text" name="headline" required />

    <label for="text">Text</label>
    <input type="text" name="text" required />

    <button>Send</button>
  </form>
</article>

<style>
  article {
    max-width: 500px;
  }
  h2,
  button {
    font-family: "aviano-sans", sans-serif;
    font-weight: 700;
    font-style: normal;
    font-size: 2rem;
    text-align: center;
  }
  input {
    font-family: Arial, Helvetica, sans-serif;
    font-weight: 700;
    border-radius: 10px;
    padding: 0.5rem;
  }
  input:focus-visible {
    background-color: white;
    color: var(--dark_blue);
  }
  input,
  button {
    border: var(--bright_red) solid 3px;
    background-color: var(--light_beige);
  }
  button {
    font-size: 1.5rem;
    width: fit-content;
    margin: auto;
    padding: 0.5rem;
    transition: all 0.2s ease-in-out;
    cursor: pointer;
  }
  button:hover {
    background-color: var(--bright_red);
    color: var(--light_beige);
    transform: scale(1.1);
  }
  label,
  h2,
  button,
  input {
    color: var(--bright_red);
  }
  form {
    display: grid;
    gap: 1rem;
  }
  input:nth-of-type(3) {
    height: 5rem;
  }
</style>

<script>
  const apiUrl = "https://djfmjkvahbvsswxqroka.supabase.co/rest/v1/testimonials";

  const apiKey =
    "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImRqZm1qa3ZhaGJ2c3N3eHFyb2thIiwicm9sZSI6ImFub24iLCJpYXQiOjE2ODE5ODMyNzcsImV4cCI6MTk5NzU1OTI3N30.DGMKrUIX5IO6XZIAM86R4pkG2R7XJ3-V8mhasSpmjp8";

  const form = document.querySelector("form");

  form.addEventListener("submit", sendTestimonial);

  function sendTestimonial(event) {
    event.preventDefault();
    const formData = form.elements;
    let name = formData.name.value;
    let headline = formData.headline.value;
    let text = formData.text.value;

    fetch(apiUrl, {
      method: "POST",
      headers: {
        apikey: apiKey,
        Accept: "application/json",
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ name, headline, text }),
    });
  }
</script>
